{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "baseUrl": "./resources/ts",
        "moduleResolution": "node",
        "types": [
            "vue"
        ],
        "preserveSymlinks": false,
        "skipLibCheck": true
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/*.vue",
        "resources/ts/**/*.vue"
    ]
}