{
    "compilerOptions": {
        "outDir": "./public/js",
        "target": "es6",
        "module": "ES2015",
        "moduleResolution": "Node",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}